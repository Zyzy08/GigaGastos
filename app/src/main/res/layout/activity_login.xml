<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="350dp"
    android:layout_height="800dp"
    android:background="@drawable/background"
    tools:context=".Login">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/pixlr_image_generator_66209881e9d68c490dc8d26d" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/logo__1_" />

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Good day!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="00000000000"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:text=" |"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/iv_change"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/change" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Enter your MPIN"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/rb_pin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                app:buttonTint="@color/white" />

            <RadioButton
                android:id="@+id/rb_pin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                app:buttonTint="@color/white" />

            <RadioButton
                android:id="@+id/rb_pin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                app:buttonTint="@color/white" />

            <RadioButton
                android:id="@+id/rb_pin4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                app:buttonTint="@color/white" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="1"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                app:backgroundTint="@color/white" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="2"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                app:backgroundTint="@color/white" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="3"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                app:backgroundTint="@color/white" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="4"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                app:backgroundTint="@color/white" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="5"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                app:backgroundTint="@color/white" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="6"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                app:backgroundTint="@color/white" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="7"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                app:backgroundTint="@color/white" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="8"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                app:backgroundTint="@color/white" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="9"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                app:backgroundTint="@color/white" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="59dp"
                android:layout_height="60dp"
                android:fontFamily="sans-serif-medium"
                android:text="0"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                app:backgroundTint="@color/white" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_backspace"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/backspace_button" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>